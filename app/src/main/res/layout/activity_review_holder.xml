<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

  <TextView
      android:id="@+id/lblReview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="@dimen/lbl_review_margin_start"
      android:layout_marginTop="@dimen/lbl_review_margin_top"
      android:text="@string/Review"
      android:textSize="@dimen/lbl_review_text_size" />

  <TextView
      android:id="@+id/lblName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/lblReview"
      android:text="@string/TextView"
      android:textColor="@android:color/holo_blue_dark"
      android:textStyle="bold" />
</RelativeLayout>

